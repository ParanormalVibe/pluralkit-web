<!doctype html>
<html lang="en-US">
<head>
<% include ../partials/head %>
<style>

	body {
		font-size: 2.5vmin;
	}
	.container {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.memberarea {
		display: flex;
		flex-direction: row;
	}

	.avatar {
		height: 15vh;
		width: auto;
	}
	.syscontainer {
		height: 25vh;
		width: 95% !important;
		margin: 1vh auto;
		display: flex;
		align-items: center;
		flex-direction: row;
	}

	.systeminfo {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.systeminfo p {
		margin: .25vh;
	}

	.sidebar {
		display: flex;
		overflow-y: auto;
		/*overflow-x: hidden;*/
		width: calc(50px + 10vmin);
		height: 62.5vh;
		text-align: center;
		float: left;
		flex-direction: column;
	}

	.member {
		font-size: 2vmin;
	}

	.membcontainer {
		flex-direction: column;
		justify-content: center;
		overflow-x: hidden;
		width: 80%;
	}

	.memberinfo {
		height: calc(100% - 20vh);
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		overflow-x: hidden;
	}

	.footer {
		margin-top: auto;
	}

	hr {
		height: .5vh;
		margin: 0;
		padding: 0;
		background-color: #EEE7D7;
		float: none;
		display: block;
		width: 100vw;
		border-width: 0px;
		border-radius: 10px;
	}

	.sysinfo .scroll {
		max-height: 100%;
	}

	@media (max-width: 820px) {

		.syscontainer {
			height: 25vh;
			float: none;
			text-align: left;
		}

		.syscontainer .avatar {
			float: left;
			object-fit: cover;
			width: 15vh;
			height: 15vh;
			margin: 1vh;
			border-radius: 50%;
		}

		.membcontainer {
			flex-direction: column;
			justify-content: center;
			overflow-x: hidden;
			width: 80%;
		}

		.memberinfo {
			height: calc(100% - 20vh);
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			overflow-x: hidden;
		}
	}
</style>
</head>

<body>
	<div class="container">
	<header>
		<%- include("../partials/header",{token: token}); %>
	</header>
	<div class="syscontainer">
		<%- include("../partials/system_other",{system: system, members: members.length}) %>
	</div>
	<div class="memberarea">
		<%- include("../partials/sidebar_other",{members: members, system: system}) %>
		<%if(member != undefined){%>
			<div class="membcontainer">
				<%- include("../partials/member_other",{member: JSON.parse(member)}); %>
			</div>
		<%}%>
	</div>
	<% include ../partials/footer %>
	</div>
</body>
</html>