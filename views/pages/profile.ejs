<!doctype html>
<html lang="en-US">
<head>
<% include ../partials/head %>
<style>

	.syscontainer {
		height: 25%;

	}

	hr {
		height: 1vh;
		margin: 0;
		padding: 0;
		background-color: #EEE7D7;
		float: none;
		display: block;
		width: 100vw;
		border-width: 0px;
		border-radius: 10px;
	}

	@media (max-width: 820px) {

		.systeminfo {
			float: left;
			border-radius: 5px;
			min-width: 40%;
			max-width: 60%;
			height: 75%;
			border-style: solid;
			border-color: black;
			border-width: 2px;
			text-align: left;
		}

		.syscontainer .avatar {
			float: left;
			object-fit: cover;
			width: 128px;
			height: 128px;
			margin: 10px;
			border-radius: 50%;
		}
	}
</style>
</head>

<body>
	<header>
		<%- include("../partials/header",{token: token}); %>
	</header>
	<div class="syscontainer">
		<%- include("../partials/system_other",{system: system, members: members.length}) %>
	<hr/>
	</div>
	<div class="container" style="height: calc(75% - 75px);">
		<%- include("../partials/sidebar_other",{members: members, system: system}) %>
		<%if(member != undefined){%>
			<div class="membcontainer">
				<%- include("../partials/member_other",{member: JSON.parse(member)}); %>
			</div>
		<%}%>
		<% include ../partials/footer %>
	</div>
</body>
</html>